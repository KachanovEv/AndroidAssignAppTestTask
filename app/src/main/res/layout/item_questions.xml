<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/answer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Answer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sentence_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="First Sentence" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/answerStatus_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/answer_editText"
        app:layout_constraintEnd_toEndOf="@+id/answer_editText"
        app:layout_constraintStart_toStartOf="@+id/answer_editText"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/answerStatusTwo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/answerStatus_iv"
        app:layout_constraintEnd_toEndOf="@+id/answer_tv"
        app:layout_constraintStart_toStartOf="@+id/answer_tv"
        app:layout_constraintTop_toTopOf="@+id/answerStatus_iv" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/answer_editText"
        android:layout_width="0dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="@+id/sentence_tv"
        app:layout_constraintEnd_toStartOf="@+id/answer_tv"
        app:layout_constraintStart_toEndOf="@+id/sentence_tv"
        app:layout_constraintTop_toTopOf="@+id/sentence_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>